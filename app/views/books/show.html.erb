<div class="row">

    <div class="col-md-4">
      
      <%= link_to "Back", root_path, class: "btn btn-custom" %>

      <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>

      <div class="row">


        <div class="reviews">

          <h1>Reviews </h1>
          
          <%= render @book.reviews %>

          

      <% if current_user.admin.blank? %>

            <%= link_to "Add Review", new_book_review_path(@book), class: "btn-custom" %>

            <%= link_to "Borrow books", new_book_borrowed_path(@book), class: "btn-custom" %>
            
            
      <% end%>

        </div>  

    </div>

    </div>

      <div class="col-md-8">

        <div class="book-info">

          <h2 class="book-title"><%= @book.title %></h2>
          <h3 class="book-author"><span>From</span> <%= @book.author %></h3>
          <h2 class="avg-rating">Average Rating</h2>
          <div class="average-review-rating" data-score=<%= @average_review %>></div>
          <span class="number-of-reviews">Based on <%= @book.reviews.count %> reviews</span>
          <p class="book-desc"><%= @book.description %></p><br>
           <% if current_user.admin.blank? %>
             <h4> <%= render @book.borroweds %></h4>
           <% end %>
        </div>
      </div>


    </div>


    <div class="links btn-group">

      <% if user_signed_in? %>
        <% if current_user.admin %>
          <%= link_to "Edit Book", edit_book_path(@book), class: "btn btn-custom" %>
          <%= link_to "Delete Book", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-custom" %>
        <% end %>
      <% end %> 

    </div>  
</div>
